@model CarWorkshopManager.Models.AddPartViewModel


<h2>Add Part to Ticket @Model.TicketId</h2>

<form asp-action="AddPart" method="post">
    <input type="hidden" asp-for="Part.TicketId" />
    <div class="form-group">
        <label asp-for="Part.Name" class="control-label"></label>
        <input asp-for="Part.Name" class="form-control" />
        <span asp-validation-for="Part.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Part.Description" class="control-label"></label>
        <input asp-for="Part.Description" class="form-control" />
        <span asp-validation-for="Part.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Part.Amount" class="control-label"></label>
        <input asp-for="Part.Amount" type="number" class="form-control" />
        <span asp-validation-for="Part.Amount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Part.UnitPrice" class="control-label"></label>
        <input asp-for="Part.UnitPrice" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Part.UnitPrice" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add Part</button>
</form>



<h3>Existing Parts</h3>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Amount</th>
            <th>Unit Price</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Parts != null)
        {
            foreach (var part in Model.Parts)
            {
                <tr>
                    <td>@part.Name</td>
                    <td>@part.Description</td>
                    <td>@part.Amount</td>
                    <td>@part.UnitPrice</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4">No parts available</td>
            </tr>
        }
    </tbody>
</table>