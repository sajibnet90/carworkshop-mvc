@model IEnumerable<CarWorkshopManager.Models.Ticket>

<h2>Tickets</h2>

<table class="table">
    <thead>
        <tr>
            <th>Ticket ID</th>
            <th>Brand</th>
            <th>Model</th>
            <th>Registration ID</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model)
        {
            <tr>
                <td>@ticket.Id</td>
                <td>@ticket.Brand</td>
                <td>@ticket.Model</td>
                <td>@ticket.RegistrationId</td>
                <td>@ticket.Description</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@ticket.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@ticket.Id" class="btn btn-danger">Delete</a>
                    <a asp-action="AddPart" asp-route-ticketId="@ticket.Id" class="btn btn-secondary">Add Parts</a>
                    <a asp-action="AddHours" asp-route-id="@ticket.Id" class="btn btn-info">Add Hours</a>
                    <a asp-action="ViewCost" asp-route-id="@ticket.Id" class="btn btn-warning">View Cost</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Create New Ticket</a>
